<html>
	<head>
		<title>Crypt currencies</title>
		<% include ../partials/head %>
	</head>
	<body>
		<% include ../partials/header %>
		<h1 class="title">Crypto-currencies</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Symbol</th>
					<th scope="col">Name</th>
					<th scope="col">Supply</th>
					<th scope="col">Price (EUR)</th>
					<th scope="col">Market Cap</th>
					<th scope="col">Percent Change 1h</th>
					<th scope="col">Percent Change 24h</th>
					<th scope="col">Percent Change 7 days</th>
				</tr>
			</thead>
			<tbody>
				<% currencies.forEach((curr) => { %>
					<tr>
						<th scope="row"><%= curr.symbol %></th>
						<td><%= curr.name %></td>
						<td class="blue"><%= curr.total_supply %></td>
						<td class="blue">€<%= curr.quotes.EUR.price %></td>
						<td class="blue">€<%= curr.quotes.EUR.market_cap %></td>

						<% if (curr.quotes.EUR.percent_change_1h > 0) { %>
							<td class="green"><%= curr.quotes.EUR.percent_change_1h %></td>
						<% } else { %>
							<td class="red">€<%= curr.quotes.EUR.percent_change_1h %></td>
						<% } %>

						<% if (curr.quotes.EUR.percent_change_24h > 0) { %>
							<td class="green"><%= curr.quotes.EUR.percent_change_24h %></td>
						<% } else { %>
							<td class="red"><%= curr.quotes.EUR.percent_change_24h %></td>
						<% } %>

						<% if (curr.quotes.EUR.percent_change_7d > 0) { %>
							<td class="green"><%= curr.quotes.EUR.percent_change_7d %></td>
						<% } else { %>
							<td class="red"><%= curr.quotes.EUR.percent_change_7d %></td>
						<% } %>

					</tr>

				<% }); %>
			</tbody>
		</table>

		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
